            <% if (success && files) { %>
                <a class="btn btn-block btn-danger" href="/deleted">Click Here to see the deleted images</a>
                <div class="alert alert-success alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
                    <strong>Success!</strong> Here are your images.
                </div>


                <% if ( files.length===0) { %>
                    <h3 style="color: red;">0 files found</h3>
                    <% } else{%>

                        <% for( let index=0; index < files.length; index++ ) {%>
                            <div style="grid-row-end: span <%=files[index].imageMediaMetadata.height/10 %>">
                                <a href="<%= files[index].webViewLink %>" target="blank">
                                    <iframe src="https://drive.google.com/file/d/<%=files[index].id%>/preview"
                                        alt="mi-pic"></iframe>
                                </a>
                            </div>

                            <% } %>

                                <% } %>

                                    <%}%>



        </div>
    </div>



